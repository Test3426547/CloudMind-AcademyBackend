modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start FastAPI server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Next.js frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start React Native dev server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Certificate Test"

[[workflows.workflow]]
name = "Start FastAPI server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 8000

[[workflows.workflow]]
name = "Start Next.js frontend"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 3000

[[workflows.workflow]]
name = "Start React Native dev server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mobile_app && expo start --web"
waitForPort = 19006

[[workflows.workflow]]
name = "Certificate Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_certificates.py"

[deployment]
run = "bash run_all.sh"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 80
